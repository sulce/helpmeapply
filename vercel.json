{
  "build": {
    "env": {
      "ENABLE_EXPERIMENTAL_COREPACK": "1"
    }
  },
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/jobs/scan",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/jobs/queue/cleanup",
      "schedule": "0 */6 * * *"
    }
  ]
}